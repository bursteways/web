---
import { getImage } from '@astrojs/image';
import Layout from 'layouts/Layout.astro';
import Card from 'components/Card.astro';

import { getSiteSettings } from 'lib/api';

const { src } = await getImage({
  src: import('public/bg.jpg'),
  alt: 'My hero image',
});
---

<Layout
  seo={{
    title: 'Welcome to Bursteways Tech.',
  }}
>
  <div
    class="h-[80vh]"
    style={{
      backgroundImage: `url(${src})`,
      backgroundSize: 'cover',
    }}
  >
    <div class="grid grid-cols-2 gap-6 pl-6 pt-32">
      <div class="flex flex-col justify-center h-full fade">
        <h1 class="text-4xl md:text-6xl lg:text-8xl font-bold text-slate-100">
          Welcome to <br /> Bursteways Tech.
        </h1>
        <br />
        <p class="text-xl md:text-2xl lg:text-4xl text-slate-200">
          Learn. Build. Awesome stuff.
        </p>
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  .fade {
    --base: 0;
    animation: filter-in calc(var(--speed, 1) * 1s) ease-in-out;
    box-shadow: var(--shadow-5);
    animation-name: var(--animation-name, filter-in);
  }
  @keyframes fade-in {
    0% {
      opacity: 0;
    }
  }

  @keyframes filter-in {
    0% {
      opacity: 0;
      filter: brightness(var(--base)) contrast(2);
      box-shadow: 0;
    }
  }
</style>
