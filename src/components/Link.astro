---
import { Image } from '@astrojs/image/components';
interface IProps {
  text: string;
  href: string;
  style: 'primary' | 'secondary';
  icon?: {
    name: string;
    side: 'left' | 'right';
  };
  isFilled?: boolean;
  isBorderVisible?: boolean;
  classes?: string;
}

const {
  text,
  href,
  style,
  icon,
  isFilled = true,
  isBorderVisible = false,
  classes,
  ...rest
} = Astro.props as IProps;
---

<a
  href={href}
  class:list={[
    'link',
    classes,
    style,
    {
      filled: isFilled,
      bordered: isBorderVisible,
    },
  ]}
  {...rest}
>
  <span>{text}</span>
</a>
